<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="8dp"
    android:background="@color/news_item_background"
    android:orientation="vertical">

    <TextView
        android:id="@+id/tvNewstitle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="13dp"
        android:maxLines="3"
        android:textColor="@color/white"
        android:textSize="18sp"
        android:textStyle="bold"
        tools:text="here the title of the news will be displainx njcj cncjc cncjc cncjc cncjcnc cncjc nc " />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/news_image"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="2"
            tools:src="@tools:sample/avatars" />

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="3"
            android:layout_marginStart="15dp"
            android:orientation="vertical">


            <TextView
                android:id="@+id/tvNewsDiscription"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="2dp"
                android:layout_weight="3"
                android:maxLines="5"
                android:textColor="@color/white"
                android:textSize="16sp"
                tools:text="news here the title of the news will be displainx njcj cncjc cncjc cncjc cncjcnc cncjc nc " />

            <TextView
                android:id="@+id/tvNewsPublished"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="2dp"
                android:textColor="@color/white"
                android:textSize="16sp"
                android:textStyle="bold"
                tools:text="18-20-22,988 -44 am" />

            <TextView
                android:id="@+id/tvNewsSource"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="2dp"
                android:textColor="@color/white"
                android:textSize="16sp"
                tools:text="CNB" />

        </LinearLayout>


    </LinearLayout>

</LinearLayout>